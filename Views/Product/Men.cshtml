
@{
    ViewBag.Title = "Men";
    Layout="~/Views/Shared/_Layout2.cshtml";
   
}
@model  List<EadProject.Models.Product>
@Scripts.Render("~/bundles/jquery")
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<br />
<br/>
<br/>
<div class="row">

    <div class="col-lg-4">
        <h1 style=" font-weight:bold ; color:darkred !important">Men Section</h1>
    </div>
    <div class="col-lg-6 pull-right">
        <!-- Search Bar -->
        <form class="navbar-form navbar-right " action="/Product/Men" method="post" id="search-form" role="search">
            <div class="form-group form-slide" style="overflow: hidden;">
                <input id="searchText" type="text" class="form-control form-input-slide" name="search" placeholder="Search" style="margin-left: 0px;" />
            </div>
            <button type="submit" class="btn btn-default search-btn" id="searchButton"><span class="glyphicon glyphicon-search"></span></button>
        </form>
    </div>

</div>
<br />
<div class="row">
    <link href="/Content/js-image-slider.css" rel="stylesheet" type="text/css" />
    <script src="/Scripts/js-image-slider.js" type="text/javascript"></script>

    <div id="slider" class="action  hide-from-mobile">
        <img src="/Images/shop.png">
        <img src="/Images/xyz.png">
        <img src="/Images/winter.png">
        <img src="/Images/accessories.png">
    </div>

</div>
<hr />
<hr />
<br />
<br />
<div class="container">
    <div class="row">
        @foreach (var p in Model)
        {
            if (p.MorW == "Man")
            {
                <div class="col-sm-3">
                    <div class="panel panel-primary">
                        <div class="panel-heading">Item </div>
                       
                                <div class="panel-body "><img class="etalage_thumb_image img-responsive" src="@Url.Content(p.Path)"  style="margin: 0 auto;" width="170" height="100" alt="Image"></div>
                      
                        <div class="panel-footer pfooter" style="color:#000000 ">
                            <p>@p.ProductName</p>
                            <p><b><u>PRICE: <span>@p.Price RS</span></u></b></p>
                            @using (Html.BeginForm("Details", "Product", new { productName = @p.ProductName }, FormMethod.Post, null))
                            {
                                <div class="form-group">
                                    <button type="submit" class="btn btn-danger"><b>Details</b></button>

                                </div>
                            }

                        </div>
                    </div>

                </div>
            }

        }
    </div>


</div>

<hr />
<div class="row">
    <link href="/Content/js-image-slider.css" rel="stylesheet" type="text/css" />
    <div id="foobar">
        <footer>
            <ul>
                <li>&copy; <b>@DateTime.Now.Year - ShopIn </b></li>
                <li style=" font-size: 15px ; font-weight:bold"> @Html.ActionLink("Refund & Exchange", "RefundAndExchange", "Home")</li>
                <li style=" font-size: 15px ; font-weight:bold"> @Html.ActionLink("ShippingInfo", "ShippingInfo", "Home")</li>
                <li style=" font-size: 15px ; font-weight:bold"> @Html.ActionLink("Privacy Policy", "ContactUs", "Home")</li>
                <li style=" font-size: 15px ; font-weight:bold"> @Html.ActionLink("About", "About", "Home")</li>
            </ul>
        </footer>
    </div>
</div>
<script type="text/javascript" src="~/Scripts/ddpowerzoomer.js"></script>
